{
   "kind":"ReplicationController",
   "apiVersion":"v1beta1",
   "metadata":{
      "name":"blue",
      "labels":{
         "app":"blue"
      }
   },
   "spec":{
      "replicas":4,
      "selector":{
         "app":"blue"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"blue"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"blue",
                  "image":"geepee2017/blueimage",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":80
                     }
                  ]
               }
            ]
         }
      }
   }
}
